<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADD GAME</title>

    <link rel="icon" href="/img/weather.png">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="/img/logo.png">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Spice&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Bungee Spice', sans-serif;
        }

        label {
            font-size: 1.2em;
        }

        .textBox {
            width: 100%;
            border-radius: 10px;
            border: 2px red solid;
            margin-top: 10px;
            height: 37px;
            background-color: #ffcd39;
            padding: 0 10px;
        }

        .video {
            position: fixed;
            z-index: -1;
            width: 100vw;
            height: 100vh;
            object-fit: cover;
            top: 0;
            left: 0;
        }

        .form-title {
            font-size: 3em;
            text-align: center;
            border-radius: 20px;
            background-color: #ffcd39;
            border: 2px solid #ce1a00;
            margin: 10px 0;
            padding: 10px;
        }

        .form-container {
            background-color: rgba(4, 168, 4, 0.516);
            border-radius: 10px;
            padding: 15px;
        }

        .submit-btn {
            width: 100%;
            border-radius: 5px;
            font-family: Bungee Spice;
            background-color: #ffcd39;
            border: 2px red solid;
            padding: 10px;
            font-size: 1.2em;
        }
    </style>
</head>
<video autoplay muted loop class="video" controlsList="nodownload">
    <source src="/video/gameVideo.mp4" type="video/mp4">
</video>

<form id="gameForm">
    <div class="container">
        <div class="form-title">ADD GAME</div>
        <div class="form-container">
            <div class="row g-3">
                <!-- Repeatable input group -->
                <div class="col-md-6">
                    <label for="gameCode">gameCode:</label>
                    <input type="text" id="gameCode" name="gameCode" class="textBox">
                </div>

                <div class="col-md-6">
                    <label for="img">img:</label>
                    <input type="text" id="img" name="img" class="textBox">
                </div>

                <div class="col-md-6">
                    <label for="title">title:</label>
                    <input type="text" id="title" name="title" class="textBox">
                </div>

                <div class="col-md-6">
                    <label for="genre">genre:</label>
                    <input type="text" id="genre" name="genre" class="textBox">
                </div>

                <div class="col-md-12">
                    <label for="about">about:</label>
                    <input type="text" id="about" name="about" class="textBox">
                </div>

                <div class="col-md-6">
                    <label for="company">company:</label>
                    <input type="text" id="company" name="company" class="textBox">
                </div>

                <div class="col-md-6">
                    <label for="rating">rating:</label>
                    <input type="number" id="rating" name="rating" class="textBox">
                </div>

                <div class="col-md-6">
                    <label for="tournament">tournament:</label>
                    <input type="text" id="tournament" name="tournament" class="textBox">
                </div>

                <div class="col-md-6">
                    <label for="price">price:</label>
                    <input type="number" id="price" name="price" class="textBox">
                </div>

                <div class="col-md-6">
                    <label for="bought">bought:</label>
                    <input type="number" id="bought" name="bought" class="textBox">
                </div>

                <div class="col-md-6">
                    <label for="wallpaper">wallpaper:</label>
                    <input type="text" id="wallpaper" name="wallpaper" class="textBox">
                </div>

                <div class="col-md-12">
                    <label for="video">video:</label>
                    <input type="text" id="video" name="video" class="textBox">
                </div>

                <div class="col-md-6">
                    <label for="SS1">SS1:</label>
                    <input type="text" id="SS1" name="SS1" class="textBox">
                </div>

                <div class="col-md-6">
                    <label for="SS2">SS2:</label>
                    <input type="text" id="SS2" name="SS2" class="textBox">
                </div>

                <div class="col-md-6">
                    <label for="SS3">SS3:</label>
                    <input type="text" id="SS3" name="SS3" class="textBox">
                </div>

                <div class="col-md-6">
                    <label for="SS4">SS4:</label>
                    <input type="text" id="SS4" name="SS4" class="textBox">
                </div>

                <div class="col-12 text-center">
                    <input type="submit" value="ADD GAME" class="submit-btn">
                </div>
            </div>
        </div>
    </div>
</form>