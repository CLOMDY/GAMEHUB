<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HOME</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

    <link href="https://fonts.googleapis.com/css2?family=Bungee+Spice&display=swap" rel="stylesheet" />
    <link rel="icon" href="/img/logo.png" />

    <style>
        .navbar-custom {
            background-color: #ffcd39;
            border-radius: 10px;
            border:
                #ce1a00 2px solid;
            font-family: 'Bungee Spice', cursive;
        }

        .navbar-custom .nav-link {
            color: #ce1a00;
        }

        .navbar-custom .nav-link:hover {
            background-color: #ffd85f;
        }

        .gameList {
            text-align: center;
            font-size:
                3rem;
            font-family: 'Bungee Spice', cursive;
            background-color: #ffcd39;
            border-radius: 20px;
            border: 2px solid #ce1a00;
            letter-spacing: 10px;
            box-shadow: 0px 0px 40px #ce1a00;
            margin-top: 30px;
            padding: 30px;
        }

        @media (max-width: 768px) {
            .gameList {
                font-size: 2rem;
                letter-spacing:
                    5px;
                padding: 20px;
            }
        }

        @media (max-width: 480px) {
            .gameList {
                font-size:
                    1.5rem;
                padding: 15px;
                letter-spacing: 3px;
            }
        }

        @keyframes glow {

            0%,
            100% {
                box-shadow: 0 0 0px #ff0000;
                background-color: transparent;
            }

            50% {
                box-shadow: 0 0 20px #ff0000;
                background-color: #ffeaa7;
            }
        }

        .glow-highlight {
            animation: glow 0.8s ease-in-out 3;
            border-radius: 8px;
        }
    </style>
</head>

<body>
    <div class="container py-3">
        <!-- Navigation -->
        <nav class="navbar navbar-expand-md navbar-custom">
            <div class="container-fluid">
                <button class="navbar-toggler w-100 position-relative" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarLinks" aria-controls="navbarLinks" aria-expanded="false"
                    aria-label="Toggle navigation"
                    style="background-color: #ffcd39; border: 2px solid #ce1a00; padding: 10px;">

                    <span class="position-absolute start-50 translate-middle-x"
                        style="font-family: 'Bungee Spice', sans-serif;">Menu</span>
                    <span class="navbar-toggler-icon float-end"></span>
                </button>



                <div class="collapse navbar-collapse justify-content-center" id="navbarLinks">
                    <ul class="navbar-nav w-100 text-center">
                        <li class="nav-item w-100">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item w-100">
                            <a class="nav-link" href="/gameList" id="gameListGlow">Game List</a>

                        </li>
                        <li class="nav-item w-100">
                            <a class="nav-link" href="/contact">Contact</a>
                        </li>
                        <li class="nav-item w-100">
                            <a class="nav-link" href="/about">About</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>

        <!-- Title -->
        <div class="gameList">
            GAMEHUB<br />
            {{title}}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-...your-integrity..." crossorigin="anonymous"></script>

    <script>
        window.addEventListener("DOMContentLoaded", () => {
            const gameListLink = document.getElementById("gameListGlow");
            gameListLink.classList.add("glow-highlight");

            // Optional: remove the class after animation ends
            setTimeout(() => {
                gameListLink.classList.remove("glow-highlight");
            }, 2400); // 0.8s * 3
        });
    </script>

</body>

</html>