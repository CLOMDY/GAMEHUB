<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HOME</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bungee+Spice&display=swap" rel="stylesheet">

  <style>
    .video {
      position: fixed;
      z-index: -1;
      width: 100vw;
      height: 100vh;
      object-fit: cover;
      top: 0;
      left: 0;
    }

    .cell {
      margin: 10px 0;
      border: 2px solid #ce1a00;
      padding: 20px;
      text-align: center;
      font-family: 'Bungee Spice', cursive;
      border-radius: 20px;
      background-color: #ffcd39;
      font-size: 2rem;
      text-shadow: 0 0 20px black;
    }

    @media (max-width: 768px) {
      .cell {
        font-size: 1.5rem;
        padding: 15px;
      }
    }

    @media (max-width: 480px) {
      .cell {
        font-size: 1.2rem;
        padding: 10px;
      }
    }
  </style>
</head>

<body>
  <video autoplay muted loop class="video" controlsList="nodownload">
    <source src="/video/gameVideo.mp4" type="video/mp4">
  </video>

  <div class="container py-4">
    {{>header}}
    <div class="row">
      <div class="col-12 col-md-6 mb-3">
        <a href="/add" style="text-decoration: none">
          <div class="cell" style="text-shadow: 0px 0px 50px green;">
            ADD GAME
          </div>
        </a>
      </div>
      <div class="col-12 col-md-6 mb-3">
        <a href="/remove" style="text-decoration: none">
          <div class="cell" style="text-shadow: 0px 0px 50px rgba(255, 0, 0, 0.656);">
            REMOVE GAME
          </div>
        </a>
      </div>
    </div>
  </div>
</body>

</html>
