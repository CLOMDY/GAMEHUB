    <style>
        body {
            font-family: 'Bungee Spice', sans-serif;
        }

        .video {
            position: fixed;
            z-index: -1;
            width: 100vw;
            height: 100vh;
            object-fit: cover;
            top: 0;
            left: 0;
        }

        .cell {
            margin: 20px auto;
            padding: 30px;
            border: 2px solid #ce1a00;
            background-color: #ffce39;
            border-radius: 20px;
            max-width: 1300px;
        }

        .title {
            font-size: 2rem;
            text-align: center;
            margin: 20px 0;
        }

        .content {
            font-size: 1rem;
            text-align: justify;
            margin-bottom: 30px;
        }

        .last {
            font-size: 0.95rem;
            text-align: justify;
            padding: 20px;
            background-color: #fff7d5;
            border-radius: 10px;
            margin-top: 30px;
        }

        @media (max-width: 576px) {
            .title {
                font-size: 1.5rem;
            }

            .content,
            .last {
                font-size: 0.95rem;
            }

            .cell {
                padding: 15px;
            }
        }
    </style>
</head>

